<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kapp.androidkapp.ArticleFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/article_fragment_article_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:text="@string/article_fragment_title"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/article_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClicked"
        android:layout_marginLeft="100dp"
        android:text="@string/article_fragment_button_text" />

</FrameLayout>
